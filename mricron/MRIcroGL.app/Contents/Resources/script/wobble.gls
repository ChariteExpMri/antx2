CONST
	kLoops=400;
	kTime= 15;
	kElevSpeed= 33; 
	kClipSpeed= 51;
	kClipSpeedF= 1.0 /kClipSpeed;
	kAziSpeed=37;
VAR
	a,e,depth: single;
	i: integer;
BEGIN
	RESETDEFAULTS;
	LOADIMAGE('mni152_2009bet');
	COLORNAME('bone');
	FOR i := 0 TO kLoops DO BEGIN
		AZIMUTH(-1);
		inc(i);
		a := abs(0.5- (i mod kAziSpeed)/kAzispeed)* 90+160;
		e := abs(0.5- (i mod kElevSpeed)/kElevspeed) * 180+90;
		depth :=  0.1+abs(0.5-(i mod kClipSpeed) * kClipSpeedF);
		CLIPAZIMUTHELEVATION(depth, a, e);
		WAIT(ktime);
	END;
END.
